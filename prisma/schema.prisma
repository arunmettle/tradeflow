generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum QuoteStatus {
  DRAFT
  SENT
  ACCEPTED
  DECLINED
}

model TradieProfile {
  id            String   @id @default(uuid())
  authUserId    String?  @unique
  slug          String   @unique
  businessName  String
  tagline       String?
  about         String?
  email         String?
  phone         String?
  logoUrl       String?
  website       String?
  addressLine1  String?
  addressLine2  String?
  suburb        String?
  state         String?
  postcode      String?
  services      Json     @default("[]")
  serviceAreas  Json     @default("[]")
  testimonials  Json     @default("[]")
  projects      Json     @default("[]")
  brandSettings Json     @default("{}")
  plan          String   @default("FREE")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  quotes        Quote[]
  leads         Lead[]
  rateMemories  RateMemory[]
  rateSamples   RateSample[]
}

model Lead {
  id             String         @id @default(uuid())
  tradieId       String
  tradie         TradieProfile  @relation(fields: [tradieId], references: [id], onDelete: Cascade)
  customerName   String
  customerEmail  String
  customerPhone  String?
  siteAddress    String?
  suburb         String?
  jobCategory    String?
  jobDescription String
  photos         Json           @default("[]")
  status         String         @default("NEW")
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  quotes         Quote[]

  @@index([tradieId, status, createdAt])
}

model Quote {
  id             String          @id @default(uuid())
  number         Int             @unique @default(autoincrement())
  status         QuoteStatus     @default(DRAFT)
  tradieId       String
  tradie         TradieProfile   @relation(fields: [tradieId], references: [id], onDelete: Cascade)
  leadId         String?
  lead           Lead?           @relation(fields: [leadId], references: [id], onDelete: SetNull)
  currentRevision Int            @default(1)
  lastCustomerMessageAt DateTime?
  lastTradieMessageAt DateTime?
  lastCustomerReadAt DateTime?
  lastTradieReadAt DateTime?
  isConversationLocked Boolean   @default(false)
  customerName   String
  customerEmail  String?
  siteAddress    String?
  jobDescriptionRaw String
  trade          String?
  jobType        String?
  scopeBullets   Json
  exclusions     Json
  terms          Json
  includeGst     Boolean         @default(true)
  subTotal       Decimal         @db.Decimal(12, 2) @default(0)
  gstAmount      Decimal         @db.Decimal(12, 2) @default(0)
  total          Decimal         @db.Decimal(12, 2) @default(0)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  lines          QuoteLine[]
  publicLinks    QuotePublicLink[]
  messages       QuoteMessage[]
  revisions      QuoteRevision[]

  @@index([tradieId, status, createdAt])
}

model QuoteLine {
  id        String   @id @default(uuid())
  quoteId   String
  quote     Quote    @relation(fields: [quoteId], references: [id], onDelete: Cascade)
  name      String
  category  String
  qty       Decimal  @db.Decimal(12, 3) @default(1)
  unit      String
  unitRate  Decimal  @db.Decimal(12, 2) @default(0)
  lineTotal Decimal  @db.Decimal(12, 2) @default(0)
  suggestedUnitRate Decimal? @db.Decimal(12, 2)
  rateSource        String?
  rateConfidence    Int?
  needsReview       Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([quoteId])
}

model QuotePublicLink {
  id            String   @id @default(uuid())
  quoteId       String
  quote         Quote    @relation(fields: [quoteId], references: [id], onDelete: Cascade)
  token         String   @unique
  expiresAt     DateTime?
  acceptedAt    DateTime?
  declinedAt    DateTime?
  declineReason String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([quoteId])
}

model QuoteMessage {
  id         String   @id @default(uuid())
  quoteId    String
  quote      Quote    @relation(fields: [quoteId], references: [id], onDelete: Cascade)
  authorType String
  body       String
  createdAt  DateTime @default(now())

  @@index([quoteId, createdAt])
}

model QuoteRevision {
  id             String   @id @default(uuid())
  quoteId        String
  quote          Quote    @relation(fields: [quoteId], references: [id], onDelete: Cascade)
  revisionNumber Int
  summary        String?
  snapshot       Json
  createdAt      DateTime @default(now())

  @@unique([quoteId, revisionNumber])
  @@index([quoteId, createdAt])
}

model RateMemory {
  id             String        @id @default(uuid())
  tradieId       String
  tradie         TradieProfile @relation(fields: [tradieId], references: [id], onDelete: Cascade)
  normalizedName String
  unit           String
  category       String?
  sampleCount    Int           @default(0)
  lastRate       Decimal       @db.Decimal(12, 2) @default(0)
  medianRate     Decimal       @db.Decimal(12, 2) @default(0)
  minRate        Decimal       @db.Decimal(12, 2) @default(0)
  maxRate        Decimal       @db.Decimal(12, 2) @default(0)
  updatedAt      DateTime      @updatedAt
  createdAt      DateTime      @default(now())

  @@unique([tradieId, normalizedName, unit])
  @@index([tradieId, normalizedName])
  @@index([tradieId, unit])
}

model RateSample {
  id             String   @id @default(uuid())
  tradieId       String
  tradie         TradieProfile @relation(fields: [tradieId], references: [id], onDelete: Cascade)
  normalizedName String
  unit           String
  rate           Decimal  @db.Decimal(12, 2)
  createdAt      DateTime @default(now())

  @@index([tradieId, normalizedName, unit])
}
